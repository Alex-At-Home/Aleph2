<settings>
<profiles>

<!-- 1] Build profile -->

  <profile> 
    <id>release</id>
    <build>
    
<!-- 1.1] Javadoc and Sources -->
    
  <plugins>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-source-plugin</artifactId>
      <version>2.2.1</version>
      <executions>
        <execution>
          <id>attach-sources</id>
          <goals>
            <goal>jar-no-fork</goal>
          </goals>
        </execution>
      </executions>
    </plugin>
    <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-javadoc-plugin</artifactId>
      <version>2.9.1</version>
      <executions>
        <execution>
          <id>attach-javadocs</id>
          <goals>
            <goal>jar</goal>
          </goals>
        </execution>
      </executions>
    </plugin>
  
<!-- 1.2] GPG -->
  
      <plugin>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-gpg-plugin</artifactId>
      <version>1.5</version>
      <executions>
        <execution>
          <id>sign-artifacts</id>
          <phase>verify</phase>
          <goals>
            <goal>sign</goal>
          </goals>
        </execution>
      </executions>
    </plugin>
  
  </plugins>
  
    </build>
  </profile>
  
<!-- 2] GPG info -->  

    <profile>
      <id>ossrh</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <gpg.executable>gpg2</gpg.executable>
        <gpg.passphrase>INSERT_GPG_PASSPHRASE_HERE</gpg.passphrase>
      </properties>
    </profile>

</profiles>

<!-- 3] User info (stubbed out of course) -->

  <servers>
    <server>
      <id>ossrh</id>
      <username>INSERT_JIRA_ID_HERE</username>
      <password>INSERT_JIRA_PASSWORD_HERE</password>
    </server>
  </servers>

